@using Orchard.Utility.Extensions;
@{
    if (Model.Title != null) {
        Layout.Title = Model.Title;
    }
    
    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
    var animation = contentTypeClassName == "projection-page" ? Model.ContentItem.ProjectionPage : Model.ContentItem.Page;
    Layout.AsideSecond.Add(New.MediaAnimation(Media:animation.RightHandAnimation));
}
